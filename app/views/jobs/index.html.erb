<h3>All Job Listings</h3>
<% @jobs.each do |job| %>
    <h4><%= link_to job.title, job_path(job) %></h4>
    <p><%= job.description %></p>
    <p><strong>Pay:</strong> $<%= job.salary %></p>
    <p><strong>Total positions for job:</strong> <%= job.positions %></p>
    <p><strong>Client:</strong> <%= link_to job.client.full_name, client_path(job.client) %></p>
<% end %>

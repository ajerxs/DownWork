<h2><%= @job.title %></h2>
<p><strong>Client: <%= link_to @job.client.full_name, client_path(@job.client) %></strong></p>
<p><strong>Pay:</strong> $<%= @job.salary %></p>
<p><strong>Total positions for job:</strong> <%= @job.positions %></p>
<p><%= @job.description %></p>
<% if @job.client == current_user %>
    <%= link_to 'Delete Job?', @job, method: 'delete' %>
<% end %>

<% if user_type == "Worker" %>
    <%= link_to "Take this job?", new_job_contract_path(@job.id) %>
<% end %>
